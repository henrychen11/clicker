<!DOCTYPE html>
<html>
  <head>
    <title>Liqr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <!-- This is to get the current user info from rails -->
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
          };
      </script>
    <% end %>

  </head>

  <body>
    
    <%= yield %>
  </body>
</html>
